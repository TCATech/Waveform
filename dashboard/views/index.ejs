<%- include('header'); -%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <!--Meta Tags-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/index.css" />
    <title><%= botClient.user.username %> - Home</title>
  </head>
  <body>
    <!--HEADER-->

    <!--MAIN BODY-->
    <section style="margin-bottom: 6%">
      <div class="d-flex justify-content-center head">
        <h1 style="font-weight: 900">
          <img class="logo"
            src="<%= botClient.user.displayAvatarURL({size: 4096}) %>"
            style="width: 10%; margin-top: -0.5%"
          />
          <span style="font-size: 40px"
            ><span style="color: #5663f7"><%= botClient.user.username %></span>
        </h1>
      </div>
      <div class="d-flex justify-content-center subtext">
        <p style="font-style: italic; font-size: 30px">
          The best music bot you could ever use, with the highest audio quality
          possible.
        </p>
      </div>
    </section>

    <section style="margin-top: -15%">
      <div class="container">
        <div class="row align-items-center mt-5">
          <div class="col-md-5 col-lg-6 order-md-1 order-0">
            <img style="border-radius: 20px; box-shadow: 0px 0px 15px 2px #000000;" class="w-100" src="https://screenie.nottca.tk/x8i3a5uyv.png" alt="" />
          </div>
          <div class="col-md-7 col-lg-6 pe-lg-4 pe-xl-7">
            <div class="d-flex align-items-start">
              <img
                class="me-4"
                src="https://cdn.discordapp.com/emojis/850924066517155871.png?v=1"
                alt=""
                width="30"
              />
              <div class="flex-1">
                <h5>All commands you could need for a music bot</h5>
                <p class="text-muted mb-4">
                  Are you sick of having a music bot with thousands of commands?
                  <%= bot.name %> has all the commands you need in just one bot!
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row align-items-center mt-5">
          <div class="col-md-5 col-lg-6 order-md-0 order-1">
            <img class="w-100" src="https://i.imgur.com/wXwAvIi.png" alt="" />
          </div>
          <div class="col-md-7 col-lg-6 pe-lg-4 pe-xl-7">
            <div class="d-flex align-items-start">
              <img
                class="me-4"
                src="https://cdn.discordapp.com/emojis/850831345051762719.png?v=1"
                alt=""
                width="30"
              />
              <div class="flex-1">
                <h5>YouTube, Spotify, SoundCloud, and more are supported!</h5>
                <p class="text-muted mb-4">
                  We support pretty much every music listening website, including YouTube, Spotify, SoundCloud, and more.</b>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row align-items-center mt-5">
          <div class="col-md-5 col-lg-6 order-md-1 order-0">
            <img class="w-100" style="border-radius: 20px; box-shadow: 0px 0px 15px 2px #000000;" src="https://screenie.nottca.tk/6wi6jy5yb.png" alt="" />
          </div>
          <div class="col-md-7 col-lg-6 pe-lg-4 pe-xl-7">
            <div class="d-flex align-items-start">
              <img
                class="me-4"
                src="https://cdn.discordapp.com/emojis/853006694312574977.png?v=1"
                alt=""
                width="30"
              />
              <div class="flex-1">
                <h5>Clear interface, with logging and buttons!</h5>
                <p class="text-muted mb-4">
                  You can control the song without ever having to type more than 1 message,  and the bot will log everything it does.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- FOOTER-->
    <section>
      <div
        class="card-footer"
        style="margin-top: 15%; text-align: center; color: #5663f7"
      >
        <hr
          style="
            width: 75%;
            background-color: #ffffff !important;
            color: #ffffff !important;
            border: 5px solid #ffffff !important;
            border-radius: 25px;
            margin-left: 12%;
          "
        />
        <h4 style="margin-top: 5%">
          <img class="logo"
            src="<%= botClient.user.displayAvatarURL({size: 4096}) %>"
            style="width: 2%; margin-top: -0.5%"
          />
          <span style="font-size: 40px"><%= botClient.user.username %></span>
        </h4>
        <h5 style="text-align: center">
          <a
            href="https://github.com/TCATech"
            target="_blank"
            style="
              font-size: 12px;
              color: #888a9b !important;
              text-decoration: none;
            "
            >&copy; <%=new Date().getFullYear() %> TCA Tech | All rights
            reserved.</a
          ><br /><br />
          <a
            href="https://github.com/Tomato6966/Musicium"
            target="_blank"
            style="
              font-size: 20px;
              color: #5663f7 !important;
              text-decoration: none;
            "
            >Original code by <code>Tomato#6966</code></a
          >
        </h5>
      </div>
    </section>

    <!--JS-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
